<robot name="myzharbot">
    <link name="base_link">
	<visual>
            <geometry>
                <cylinder length=".01" radius="0.01"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 0.8"/>
            </material>
        </visual>
    </link>

